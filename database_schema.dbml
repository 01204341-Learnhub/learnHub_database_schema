Table student {
    __ __
    interested_tags array_of_string // array of tag in interest of this student
    owned_progarms  array_of_owned_progarm_item // might not need progarm that is  owned by this student
    wishlist array_of_wish_item // wishlist of this studednt
    basket array_of_basket_item // basket ( list of progarm to be bought) of this studednt
    payment_method what // what
 }

Table teacher {
    __ __
    owned_progarms  array_of_owned_progarm_item // progarm that is owned by this teacher

 }

 Table courses {
    _id objectId 
    name string // course name
    description string // long description in md?
    course_objective array_of_string
    course_requirement string
    difficulty_level string
    tags array_of_objectId // course's tag in array of tag_id
    course_pic string // pic in course profile in URL may need more
    created_date date
    total_video_length int // in second
    chapter_count int
    quiz_count int
    file_count int
    student_count int // number of student who enroll this course
    teacher_id objectId
    rating double // average review score of this course
    review_count int // number of review
    price double // of a course in baht
    status string // finished | not started | started | private
 }

  Table classes {
    _id objectId // class's id
    name string
    description string // long description
    class_objective array_of_string // list of class_objective
    class_requirement string
    difficulty_level string
    tags array_of_objectId // class's tag in array of tag_id
    class_pic string
    created_date date
    student_count int
    max_student int
    assignment_count int
    meeting_count int
    chapter_count int
    open_time something
    registration_ended_date date // can't register beyond this date
    class_ended_date date // the day class end and no more teaching
    teacher_id objectId // may include name
    price double // of a course in baht
    status string // finished | not started | started | private
 }

  Table chapters {
    _id objectId // chapter's id
    course_id objectId
    name string // chapter's name
    description string
    chapter_num int // chapter number
    lesson_count int // total lesson count
    chapter_length int // expected study time of this chapter in second (video included)
    

 }
 

 Table pre_quiz {
    quiz_id objectId
    
 }
  Table quiz {
    quiz_id objectId
    quiz_struct quiz_struct

 }

  Table course_progresses { // not done yet
    _id objectId
    student_id objectId
    course_id objectId //
    progress double // total progress in percent
