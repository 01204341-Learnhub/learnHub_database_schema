    lessons array_of_lesson_progress
 }
 Table lesson_progress { // not done yet
    __ __
    lesson_id objectId
    chapter_id objectId
    finished boolean //  has student finished this lessson
    lesson_completed int //  lesson lenght completed in second
    quiz_score int_or_double // absolute score or percent for quiz only

 }


   Table class_progresses { // not done yet
